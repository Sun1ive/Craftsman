			col-xs-12()
			font(16px,Helvetica,700,#fff)
			.visit
				display flex
				align-items center
				md(flex-flow, column wrap)
				justify-content center
				position relative
				margin-bottom: 25px
				xs(text-align, center)
				h2
					width 100%


