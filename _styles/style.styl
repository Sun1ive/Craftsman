//====================
// import
// ===================
@import ("smart-grid.styl");
@import ("settings.styl")
//====================
// code
// ===================
#wrapper
	max-width 1440px
	margin 0 auto
	position relative

.background
	background-image: url('../_img/bgi.png')
	height 100%
	height: 744px
	&-gradient
		background-image url('../_img/top-gradient.png')
		height 479px

.container
	max-width 1100px
	margin 0 auto

.header
	display flex
	flex-direction row
	flex-wrap wrap
	align-items center
	position: fixed
	max-width 1100px
	min-height 120px
	width 100%
	background-color: #FFF
	.firstBlock
		display flex
		justify-content flex-end
	.secondBlock
		margin-top 10px
		display flex
		justify-content flex-end
		font(29px,Helvetica,400,$redText)
		text-transform uppercase
		.phone
			font-weight bold
			margin-left 40px
	&-logo
		margin-top 20px
		width 50%
		flex-grow 1
	&-menu
		margin-top 20px
		width 50%
		flex-grow 1
		.socials
			display flex
			font-size: 30px
			margin-left 30px
			a
				margin 0 22px
				color: #c00c0c
				&:last-child
					margin-right: 0
		.button
			background-color: $darkRed
			font(15px,Helvetica,400,#fff)
			text-transform uppercase
			padding 10px 15px
			cursor: pointer

.headerNavBar
	display flex
	justify-content space-between
	width 100%
	padding-top 15px
	a
		font(16px,Helvetica,400,$black)
		text-transform uppercase
	.active
		font-weight: bold
		color $redText
	.hasMenu
		position relative
		&:after
			content ""
			position absolute
			top 5px
			right: -13px
			border-style: solid;
			border-width: 5px 5px 0 5px;
			border-color: #323232 transparent transparent transparent;

.about
	min-height 550px
	background-color: #FFF
	.container
		display flex
		align-items center
		min-height 550px
	.aboutCraft
		flex-grow 1
		margin-top 30px
		max-width 550px
		min-height 455px
		h1
			font(40px,Helvetica,400,$black)
			margin-bottom 20px
			span
				font-weight bold
				color $redText
				font-style italic
				text-transform uppercase
		p
			width 90%
			font(16px,Helvetica,400,$black)
			line-height 23px
			margin-bottom 10px
		.learnMore
			text-transform uppercase
			font(18px,Helvetica,400,$black)
			line-height 49px
			position relative
			margin-bottom 20px
			cursor: pointer
			&:after
				content "\2192"
				position absolute
				color $redText
				left 130px
		.add
			width 327px
			height 83px
			background-image url('../_img/button.png')
			font(20px,Helvetica,400,#fff);
			text-transform uppercase
			display flex
			flex-flow column wrap
			align-items center
			justify-content center
			transform translateX(-35px)
			cursor: pointer
			span
				width 80%
			.number
				font-size: 32px
				font-weight: bold
				font-style: italic

	.picture
		max-width 550px
		flex-grow 1
		min-height 455px
		margin-top 100px
		position relative
		.mainPic
			position relative
			z-index 10
		.back
			position absolute
			z-index 1
			right 0
			top -35px