@font-face
	font-family Helvetica
	src url("../_fonts/Helvetica.woff2") format("woff2")

@font-face
	font-family: "Helvetica Bold";
	src: url("../_fonts/Helvetica-Bold.woff2") format("woff2")

@font-face
	font-family: "Helvetica Oblique";
	src: url("../_fonts/Helvetica-BoldOblique.woff2") format("woff2")

//====================
// mixins
// ===================
font($size,$family,$weight,$color)
	font-size $size
	font-family $family
	font-weight $weight
	color: $color
//====================
// variables
// ===================
$darkGray = #2f2f2f
$purple = #b03060
$darkRed = #810000
$black = #323232
$redText = #800000


//====================
// global
// ===================
[v-cloak]
	display none

body
	padding 0
	margin 0
	background url('../_img/cork-wallet.png')
*
	box-sizing: border-box

a
	text-decoration: none
	&:hover
		text-decoration underline


h1
h2
h3
p
	margin 0
	padding 0

ul
ol
	list-style none
	padding 0
	margin 0
